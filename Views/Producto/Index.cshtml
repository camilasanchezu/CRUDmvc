@model List<Producto>
@{
    ViewData["Title"] = "Lista de Productos";
}
<h1>@ViewData["Title"]</h1>
<button type="button" class="btn btn-success"onclick="location.href='@Url.Action("Create","Producto")'">Nuevo Producto</button>

<p>Esta página muestra los productos.</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
        <tr>
            <td>@item.IdProducto</td>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>@item.Cantidad</td>
            <td>
                    <button type="button" class="btn btn-success"><i class="fas fa-eye"></i> Ver</button>
                    <button type="button" class="btn btn-success"> <i class="fa-solid fa-cart-shopping"></i> Escoger</button>
                    <button type="button" class="btn btn-success"><i class="fas fa-edit"></i> Editar</button>
            </td>
          
        </tr>
        }
        
    </tbody>
</table>
